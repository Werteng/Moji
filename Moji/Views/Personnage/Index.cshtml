@model IEnumerable<Moji.Entities.Personnage>

@{
    ViewData["Title"] = "Index";
}

<div class="affichagePersonnage">
    <img class="imgfond" src="~/Content/fond.png" alt="" />
</div>

<div class="creationPersonnage">
    <p>
        <div>
            <a class="creerPerso"asp-action ="Create">Creer un nouveau personnage</a>
        </div>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvatarUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Or)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SanteActuel)
                </td>
                <td>
                </td>
                    @Html.DisplayFor(modelItem => item.ManaActuel)
                <td>
                    @Html.DisplayFor(modelItem => item.SanteMax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManaMax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Xp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Niveau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdRace)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdClasse)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prenom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Or)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SanteMax)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ManaMax)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Niveau)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdRace)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdClasse)
                    </td>
                    <td>
                        <button type="button" class="btn btn-success mb-2 bouttonCrePerso">
                            <a asp-action="Edit" asp-route-id="@item.Id">Editer</a> </button>
                        <button type="button" class="btn btn-info mb-2 bouttonCrePerso">
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </button>
                        <button type="button" class="btn btn-danger mb-2 bouttonCrePerso">
                            <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                        </button>
</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="clear">

</div>

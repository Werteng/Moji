@using Microsoft.AspNetCore.Identity
@using Moji.Areas.Identity.Data

@inject SignInManager<MojiUser> SignInManager
@inject UserManager<MojiUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
   
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    
    
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit">Deconnection</button>
        </form>
  
}
else
{
   
        <a  id="register" asp-area="Identity" asp-page="/Account/Register">S'enregistrer</a>
    
    
        <a  id="login" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
  
}

